<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

        <Style x:Key="Titulo" TargetType="Label">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="MontserratBold" />
            <Setter Property="TextColor" Value="#FF0056B3" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,24,0,12" />
        </Style>

        <!-- Etiqueta de campo --> 
        <Style x:Key="Etiqueta" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="MontserratMedium" />
            <Setter Property="TextColor" Value="#FF0056B3" />
            <Setter Property="Margin" Value="0,12,0,0" />
        </Style>

        <!-- Campo de entrada --> 
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="MontserratRegular" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="PlaceholderColor" Value="#FF808080" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="Margin" Value="0,6,0,0" />
        </Style>

        <!-- Botón --> 
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="MontserratBold" />
            <Setter Property="TextColor" Value="#004AAD" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="BorderColor" Value="#004AAD" />
            <Setter Property="BorderWidth" Value="2.5" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="Margin" Value="0,12,0,0" />
            <Setter Property="HorizontalOptions" Value="Fill" />
            <Setter Property="WidthRequest" Value="160" />
        </Style>

        <!-- Link textual --> 
        <Style x:Key="Link" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="MontserratRegular" />
            <Setter Property="TextColor" Value="#FF0056B3" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,18,0,0" />
        </Style>

        <!-- Urgencia visual --> 
        <Style x:Key="Rojo" TargetType="BoxView">
            <Setter Property="Color" Value="#FFD32F2F" />
        </Style> 

        <Style x:Key="Naranja" TargetType="BoxView">
            <Setter Property="Color" Value="#FFFFA000" />
        </Style>

        <Style x:Key="Amarillo" TargetType="BoxView">
            <Setter Property="Color" Value="#FFFFEB3B" />
        </Style>

        <Style x:Key="Verde" TargetType="BoxView">
            <Setter Property="Color" Value="#FF388E3C" />
        </Style>

</ResourceDictionary> 